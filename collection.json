{
  "info": {
    "name": "Unite Backend API - Sample Collection",
    "_postman_id": "unite-backend-sample-collection",
    "description": "Collection to test auth, leads, and tasks endpoints for the Unite backend sample.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register (create user)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"testuser@example.com\",\n  \"password\": \"Password123!\",\n  \"role\": \"manager\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "register"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"Password123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Leads",
      "item": [
        {
          "name": "Create Lead",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Lead A\",\n  \"phone\": \"9999000001\",\n  \"email\": \"leadA@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/leads",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "leads"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create Duplicate Lead (expect 409)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Lead A Duplicate\",\n  \"phone\": \"9999000001\",\n  \"email\": \"dup@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/leads",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "leads"
              ]
            }
          },
          "response": []
        },
        {
          "name": "List Leads",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/leads",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "leads"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Lead by ID (replace :id)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/leads/:id",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "leads",
                ":id"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Create Call Task",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"leadId\": \"<replace_with_lead_id>\",\n  \"assigned_to\": \"<replace_with_user_id>\",\n  \"scheduledAt\": \"2025-01-01T10:00:00Z\",\n  \"idempotencyKey\": \"task-1234\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tasks",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "tasks"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Complete Call Task",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"outcome\": \"successful\",\n  \"note\": \"Called and interested\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tasks/:id/complete",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "tasks",
                ":id",
                "complete"
              ]
            }
          },
          "response": []
        }
      ]
    }
  ]
}